@{
    ViewBag.Title = "Home Page";
}

<div class="hero-section">
    <div class="container">
        <div class="columns w-row">
            <div class="w-col w-col-6">
                <div class="hero-wrapper">
                    <h1 class="hero-heading">Victorian Households</h1>
                    <p class="hero-paragraph">Take Quiz. Get Feedback. Live A Sustainable Life.</p>
                    <div class="hero-button-wrapper">
                        <a href="@Url.Action("Quiz","Home")" class="btn light outline w-button">Get Started</a>
                    </div>
                </div>
            </div>
            <div class="column-2 w-col w-col-6">
                @using (Html.BeginForm("General_search", "Food_recipes", FormMethod.Get, new { @class = "home-search w-form" }))
                {
                    <div>
                        @Html.TextBox("SearchString", null, new { required = "", id = "search", style = "maxlength: 256;", @class = "home-search-bar w-input", @placeholder = "Search recipes and appliances..." })
                        <input type="submit" value="Search" class="home-search-but w-button">
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="support-section">
    <div class="container">
        <div class="support-wrapper" style="text-align:center;">
            <div class="support-column">
                <p style="text-align: center;"><strong>Switch to our recommended energy-efficient products</strong></p>
                <img src="~/Images/down-arrow.png" style="width: 40px;" />
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <div class="support-square">
                                <div class="support-square-text">Save <br>energy</div><img src="~/Images/Circle.svg" alt="Circle Decoration in Shop Products Block" class="support-square-image">
                            </div>
                        </div>
                        <div class="flip-card-back">
                            <div class="support-square">
                                <div class="support-square-text">
                                    <a href="@Url.Action("AppliancesType", "Home")">
                                        <img src="~/Images/SaveEnergy.png">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="support-column" style="text-align:center;">
                <p style="text-align: center;"><strong>Reduce your food waste from growing your own herbs and making left-over recipes</strong></p>
                <img src="~/Images/down-arrow.png" style="width: 40px;" />
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <div class="support-square">
                                <div class="support-square-text">Reduce waste</div><img src="~/Images/Triangle.svg" alt="Triangle Decoration in Donate Block" class="support-square-image triangle">
                            </div>
                        </div>
                        <div class="flip-card-back">
                            <div class="support-square">
                                <a href="@Url.Action("ReduceFoodWaste", "Home")">
                                    <img src="~/Images/FoodWaste.png">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="support-column" style="text-align:center;">
                <p style="text-align: center;"><strong>Find out where you can recycle your appliances and how to compost your wastes</strong></p>
                <img src="~/Images/down-arrow.png" style="width: 40px;" />
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <div class="support-square">
                                <div class="support-square-text">Learn to<br>Reuse</div><img src="~/Images/Rectangle.svg" alt="Rectangle Decoration in Buy Gift Cards Block" class="support-square-image rectangle">
                            </div>
                        </div>
                        <div class="flip-card-back">
                            <div class="support-square">
                                <a href="@Url.Action("Composting", "Home")">
                                    <img src="~/Images/reuse.png">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@model EnvisionAGreenLife.Models.refrigerator

@{ var SpList = ViewData["SimilarProducts"] as List<EnvisionAGreenLife.Models.refrigerator>;}


@{
    ViewBag.Title = "Refrigerator Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Styles/ApplianceDetail.css" rel="stylesheet" />
<h1>@Model.Brand @Model.Model_No</h1>
<div class="applianceImage">
    <img src='@Url.Content("~/Images/refrigerator4.jpeg")' alt="Refrigerator" />
</div>
<div class="applianceIntro">
    <h2>@Model.Brand @Model.Designation</h2>
    <br />
    <h3>Energy Rating: @Model.Star2009 </h3>
    <br />
    <br />
    <br />
    <p>
        This @Model.Tot_Vol L @Model.Configuration @Model.Designation from @Model.Brand is packed with a
        range of great features that will not only help you keep your
        food fresher for longer, but will look stylish in your kitchen
    </p>
</div>
<hr />
<div class="specification">
    <h3>Specification</h3>
    <dl class="dl-horizontal">



        <dt>
            Brand
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Brand)
        </dd>

        <dt>
            Model number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Model_No)
        </dd>

        <dt>
            Energy consumption Kw
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CEC)
        </dd>

        <dt>
            Compartment gross volume L
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompartGrVol)
        </dd>

        <dt>
            Compartment net volume L
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompartNetVol)
        </dd>

        <dt>
            Compartment type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompartType)
        </dd>

        <dt>
            Configuration type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Configuration)
        </dd>

        <dt>
            Appliance type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Designation)
        </dd>

        <dt>
            Made in
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>

        <dt>
            Depth
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Depth)
        </dd>

        <dt>
            Height
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Height)
        </dd>
        <dt>
            Width
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Width)
        </dd>


        <dt>
            Fresh food volumn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FF_Vol)
        </dd>

        <dt>
            Freezer volumn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FZ_Vol)
        </dd>

        <dt>
            Energy rating
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Star2009)
        </dd>

        <dt>
            Total volumn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tot_Vol)
        </dd>

        <dt>
            Product website
        </dt>

        <dd>
            <a href="@Model.Product_Website">@Model.Product_Website</a>
        </dd>

        <dt>
            Representative brand Url
        </dt>

        <dd>
            <a href="@Model.Representative_Brand_URL">@Model.Representative_Brand_URL</a>
        </dd>
    </dl>
</div>
<hr>
<div>
    <h3>Similar products</h3>
    <br>
    @foreach (var item in SpList)
    {<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="card">
                <h2 style="text-align:center; height:50px;">@item.Brand</h2>
                <a href='@Url.Action("Details", "refrigerators",new { id = @item.Refrigerator_Id})'>
                    <img src='@Url.Content("~/Images/refrigerator4.jpeg")' alt="Refrigerator" style="width:100%" />
                </a>
                <p>
                    <button onclick="location.href='@Url.Action("Details", "refrigerators",new { id = @item.Refrigerator_Id })'" type="button" class="Button" style="height:100px">
                        Model Number: @item.Model_No
                    </button>
                </p>
            </div>
        </div>
    }

</div>

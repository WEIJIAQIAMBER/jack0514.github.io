<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Envision a Green Life</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Styles/Layout.css" rel="stylesheet" />
</head>
<body>
    <img class="logo" src="~/Images/TeamLogo.png" alt="project logo">
    <p class="name"> ENVISION A GREEN LIFE </p>
    <div class="navbar navbar-inverse">
        <div class="container">
            @*<div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>*@
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("HOME", "Index", "Home")</li>
                    <li>@Html.ActionLink("TAKE THE QUIZ", "Quiz", "Home")</li>
                    <li>@Html.ActionLink("REUSE", "Reuse", "Home")</li>
                    <li>@Html.ActionLink("SAVE ENERGY", "Energy", "Home")</li>
                    <li>@Html.ActionLink("REDUCE FOOD WASTE", "Food", "Home")</li>
                    <li>@Html.ActionLink("ABOUT", "About", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Envision a Green Life</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

@model EnvisionAGreenLife.Models.recipe

@{
    ViewBag.Title = "Leftover Recipe Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Styles/ApplianceDetail.css" rel="stylesheet" />
<div class="container body-content">
    <div style="margin-left:250px">
        @using (Html.BeginForm("General_search", "Food_recipes", FormMethod.Get))
        {
            <div>
                Search all recipes: @Html.TextBox("SearchString", null, new { style = "width: 380px;", @class = "recipeSearchBar", @placeholder = "Find by name, ingredients, time, difficulty level" })
                Difficulty: @Html.DropDownList("Difficulty", null, htmlAttributes: new { @class = "recipeSearchBar" })
                <input type="submit" value="Search" />
            </div>
        }
    </div>
    <h1>@Model.name</h1>
    <div style="height:600px;">
        <div class="applianceImage">
            @if (Model.recipe_type_id == 1)
            {
                <img src='@Url.Content("~/Images/breakfast1.jpg")' alt="Breakfast" style="width:500px;height:500px;" />
            }
            else
                if (Model.recipe_type_id == 2)
            {
                <img src='@Url.Content("~/Images/lunch.jpg")' alt="Lunch" style="width:500px;height:500px;" />
            }
            else
                if (Model.recipe_type_id == 3)
            {
                <img src='@Url.Content("~/Images/dinnerfin.jpg")' alt="Dinner" style="width:500px;height:500px;" />
            }
            else
                if (Model.recipe_type_id == 4)
            {
                <img src='@Url.Content("~/Images/dessertfin2.png")' alt="Dessert" style="width:500px;height:500px;" />
            }
        </div>
        <div class="applianceIntro" style="width:50%">
            <h2><b>@Model.name</b></h2>
            <br />
            <h4><b>Difficulty level:</b> @Model.difficulty_assignment </h4>
            <h4><b>Estimated time:</b> @Model.minutes </h4>
            <hr>
            <p><b>Ingredients:</b><br /> @Model.ingredients </p>
            <br />
            <p><b>Instructions:</b><br /> @Html.Raw(Model.steps)</p>
            <br />
            <br />
            <br />
        </div>
        <hr />
    </div>
</div>

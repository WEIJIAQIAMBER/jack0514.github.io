@model EnvisionAGreenLife.Models.dishwasher

@{ var SpList = ViewData["SimilarProducts"] as List<EnvisionAGreenLife.Models.dishwasher>;}


@{
    ViewBag.Title = "Dishwasher Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Styles/ApplianceDetail.css" rel="stylesheet" />
<h1>@Model.Brand @Model.Model_No</h1>
<div class="applianceImage">
    <img src='@Url.Content("~/Images/Dishwasher3.jpeg")' alt="Dishwasher" />
</div>
<div class="applianceIntro">
    <h2>@Model.Brand @Model.Type Dishwasher</h2>
    <br />
    <h3>Energy Rating: @Model.New_Star </h3>
    <br />
    <br />
    <br />
    <p>
        The @Model.Brand @Model.Height @Model.Type dishwasher
        is a great time and money saver thanks to its @Model.New_Star Star Water
        Rating and @Model.Cap place settings.
    </p>
</div>
<hr />
<div class="specification">
    <h3>Specification</h3>
    <dl class="dl-horizontal">

        <dt>
            Brand
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Brand)
        </dd>

        <dt>
            Place settings
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cap)
        </dd>

        <dt>
            Energy consumption Kw
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CEC)
        </dd>

        <dt>
            Water conncetion type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Conn_Type)
        </dd>

        <dt>
            Made in
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>

        <dt>
            Width
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Width)
        </dd>

        <dt>
            Depth
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Depth)
        </dd>

        <dt>
            Height
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Height)
        </dd>

        <dt>
            Model number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Model_No)
        </dd>

        <dt>
            star rating
        </dt>

        <dd>
            @Html.DisplayFor(model => model.New_Star)
        </dd>

        <dt>
            Typt
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt>
            Water softener
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Water_Softener)
        </dd>

        <dt>
            Product_Website
        </dt>

        <dd>
            <a href="@Model.Product_Website">@Model.Product_Website</a>
        </dd>

        <dt>
            Representative_Brand_URL
        </dt>

        <dd>
            <a href="@Model.Representative_Brand_URL">@Model.Representative_Brand_URL</a>
        </dd>

    </dl>
</div>
<hr>
<div>
    <h3>Similar products</h3>
    <br>
    @foreach (var item in SpList)
    {<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="card">
                <h2 style="text-align:center; height:50px;">@item.Brand</h2>
                <a href='@Url.Action("Details", "dishwashers",new { id = @item.Dishwasher_Id})'>
                    <img src='@Url.Content("~/Images/Dishwasher3.jpeg")' alt="Dishwasher" style="width:100%" />
                </a>
                <p>
                    <button onclick="location.href='@Url.Action("Details", "dishwashers",new { id = @item.Dishwasher_Id })'" type="button" class="Button" style="height:100px">
                        Model Number: @item.Model_No
                    </button>
                </p>
            </div>
        </div>
    }

</div>

